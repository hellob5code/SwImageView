<?xml version="1.0" encoding="utf-8"?>
<ScrollView
   xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:clipToPadding="false"
   android:paddingBottom="@dimen/activity_vertical_margin"
   android:paddingLeft="@dimen/activity_horizontal_margin"
   android:paddingRight="@dimen/activity_horizontal_margin"
   android:paddingTop="@dimen/activity_vertical_margin"
   tools:context="kr.swkang.sampleswimageview.SampleActivity">

   <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_horizontal"
      android:orientation="vertical">

      <kr.swkang.swimageview.SwImageView
         android:id="@+id/siv_1"
         android:layout_width="300dp"
         android:layout_height="200dp"
         android:layout_marginBottom="20dp"
         android:clickable="true"
         app:siv_border_color="@android:color/darker_gray"
         app:siv_border_width="5dp"
         app:siv_click_color="#80000000"
         app:siv_click_enter_duration="150"
         app:siv_click_exit_duration="300"
         app:siv_corner_radius="20dp"
         app:siv_corner_type="all"
         app:siv_enable_transition="true"
         app:siv_transition_duration="250"/>

      <kr.swkang.swimageview.SwImageView
         android:id="@+id/siv_2"
         android:layout_width="300dp"
         android:layout_height="200dp"
         android:layout_marginBottom="20dp"
         android:clickable="true"
         app:siv_border_color="#F9690E"
         app:siv_border_width="5dp"
         app:siv_click_color="#80000000"
         app:siv_click_enter_duration="250"
         app:siv_click_exit_duration="350"
         app:siv_corner_radius="8dp"
         app:siv_corner_type="left"
         app:siv_enable_transition="true"
         app:siv_transition_duration="1000"/>

      <kr.swkang.swimageview.SwImageView
         android:id="@+id/siv_3"
         android:layout_width="200dp"
         android:layout_height="200dp"
         android:layout_marginBottom="20dp"
         android:clickable="true"
         app:siv_click_color="#80000000"
         app:siv_click_enter_duration="100"
         app:siv_click_exit_duration="150"
         app:siv_enable_transition="true"
         app:siv_is_oval="true"
         app:siv_transition_duration="500"/>

      <kr.swkang.swimageview.SwImageView
         android:id="@+id/siv_4"
         android:layout_width="200dp"
         android:layout_height="200dp"
         android:layout_marginBottom="20dp"
         android:clickable="true"/>

      <kr.swkang.swimageview.SwImageView
         android:id="@+id/siv_5"
         android:layout_width="300dp"
         android:layout_height="200dp"
         android:layout_marginBottom="20dp"
         android:clickable="true"/>

      <kr.swkang.swimageview.SwImageView
         android:id="@+id/siv_6"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:clickable="true"
         android:src="@drawable/sample_img_1"
         app:siv_click_color="#80000000"
         app:siv_click_enter_duration="100"
         app:siv_click_exit_duration="150"/>

   </LinearLayout>

</ScrollView>
